    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pullToRefresh"
    tools:context=".fragment.TrangChuFragment">
    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="horizontal"-->
            <!--            >-->

            <!--            <EditText-->
            <!--                android:id="@+id/Email"-->
            <!--                android:layout_width="300dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:background="@drawable/editdesign"-->
            <!--                android:hint="Search"-->
            <!--                android:textSize="12sp" />-->

            <!--            <Button-->
            <!--                android:id="@+id/dangnhap"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:layout_gravity="right"-->

            <!--                android:layout_marginTop="20dp"-->
            <!--                />-->
            <!--        </LinearLayout>-->


            <!-- Add your carousel views here -->
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:iss_auto_cycle="true"
                app:iss_delay="1"
                app:iss_period="2000"
                app:iss_placeholder="@color/black" />
            <!--</androidx.recyclerview.widget.RecyclerView>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Sản Phẩm Mới"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleviewhoangang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F6F6F6"></androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Tất Cả Sản Phẩm"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/timkiemtrangchu"
                        android:layout_width="320dp"
                        android:layout_height="65dp"
                        android:hint="Tìm Kiếm..."
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:background="@drawable/editdesign"
                        />

                    <ImageButton
                        android:id="@+id/btntimkiem"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:background="@color/hong"
                        android:src="@android:drawable/ic_menu_search"></ImageButton>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="320dp"
                        android:layout_height="65dp"
                        android:layout_margin="10dp"
                        android:hint="Thứ Tự Gía"
                        android:textColorHint="@color/black">

                        <AutoCompleteTextView
                            android:id="@+id/thutugia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"

                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageButton
                        android:id="@+id/btnreset"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_restart_alt_24"
                        android:background="@color/hong"></ImageButton>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleviewhoa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F6F6F6"></androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>