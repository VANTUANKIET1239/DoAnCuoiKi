<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:backgroundTint="@color/hong"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Thông Tin Giao Hàng"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/HoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Văn Tuấn Kiệt"
            android:textSize="20sp"
            android:layout_margin="5dp"
            ></TextView>
        <TextView
            android:id="@+id/SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0906889483"
            android:textSize="20sp"
            android:layout_margin="5dp"
            ></TextView>

        <TextView
            android:id="@+id/DiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="61/19/1B Mã Lò"
            android:textSize="20sp"
            android:layout_margin="5dp"
            ></TextView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/chinhsua"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/cam"
                android:drawableLeft="@drawable/baseline_app_registration_24"
                android:text="Chỉnh Sửa"
                ></Button>

            <Button
                android:id="@+id/xoabo"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/reddong"
                android:drawableLeft="@drawable/baseline_delete_24"
                android:text="Xóa Bỏ"
                ></Button>

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>